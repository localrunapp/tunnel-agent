{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "target": "ES2022",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": [
        "app/**/*",
        "core/**/*",
        "bin/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "core/proxy"
    ]
}